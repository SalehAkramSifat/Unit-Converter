<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <!-- Dropdown Menu -->
    <Spinner
        android:id="@+id/spinnerConversionType"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rounded_spinner_background"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Swap Units -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/tvUnitFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feet"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#007BFF"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/btnSwap"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_swap_horiz_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Swap Units"
            android:tint="#007BFF" />

        <TextView
            android:id="@+id/tvUnitTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meter"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#007BFF"
            android:padding="10dp" />
    </LinearLayout>

    <!-- Input & Output -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="20dp">

        <EditText
            android:id="@+id/etInputValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter Value"
            android:inputType="numberDecimal"
            android:padding="15dp"
            android:textSize="18sp"
            android:background="@drawable/rounded_edittext_background"
            android:textColor="#000000"
            android:textColorHint="#808080" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#007BFF"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvOutputValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:padding="15dp"
            android:background="@drawable/rounded_textview_background" />
    </LinearLayout>

    <!-- Footer Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/btnHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:gravity="center"
            android:background="@drawable/rounded_button_background"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>